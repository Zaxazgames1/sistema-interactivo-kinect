# ========================================
# MERGE DRIVERS
# ========================================
# Archivos de configuración - usar merge=ours para evitar conflictos
.gitattributes merge=ours
.gitignore merge=ours

# ========================================
# EXPORT-IGNORE
# ========================================
# Archivos a excluir de los archives de export
.gitattributes export-ignore
